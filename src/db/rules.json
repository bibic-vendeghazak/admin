{
  "rules": {
    "admins": {
      ".read": "root.child('admins').hasChildren([auth.uid])"
    },
    "roomServices": {
      ".read": true
    },
    "rooms": {
      ".read": true,
      ".write": "root.child('admins').hasChildren([auth.uid])",
      "$roomId": {
        "available": {
          ".validate": "newData.isBoolean()"
        },
        "maxAdults": {
          ".validate": "newData.isNumber()"
        },
        "maxChildren": {
          ".validate": "newData.isNumber()"
        }
      }
    },
    "reservations": {
      "$reservation": {
        "public": {
          ".read": true,
          "roomId": {
            ".validate": "newData.isNumber()"
          },
          "handled": {
            ".validate": "newData.isBoolean()",
           ".write": "root.child('admins').hasChildren([auth.uid])"
          }
        },
        "details": {
            ".read": "root.child('admins').hasChildren([auth.uid])"
				}
      }
    },
    "feedbacks": {
     	"$feedback": {
        "public": {
          ".read": true,
           "handled": {
             ".validate": "newData.isBoolean()",
          	 ".write": "root.child('admins').hasChildren([auth.uid])"
    	    }
        },
        "details": {
            ".read": "root.child('admins').hasChildren([auth.uid])"
				}

      }
    },
  }
}
